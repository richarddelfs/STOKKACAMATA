<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="284dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/profiletransaksi1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pembeli1text"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:text="Pembeli"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profiletransaksi1" />

    <TextView
        android:id="@+id/pembeli1texttitik"
        android:layout_width="5dp"
        android:layout_height="wrap_content"
        android:text=":"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/pembeli1"
        app:layout_constraintTop_toBottomOf="@+id/profiletransaksi1" />

    <TextView
        android:id="@+id/pembeli1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/pembeli"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profiletransaksi1" />

    <TextView
        android:id="@+id/alamat3text"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:text="Alamat"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pembeli1text" />

    <TextView
        android:id="@+id/alamat3texttitik"
        android:layout_width="5dp"
        android:layout_height="wrap_content"
        android:text=":"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/alamat3"
        app:layout_constraintTop_toBottomOf="@+id/pembeli1texttitik" />

    <TextView
        android:id="@+id/alamat3"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/alamat1"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pembeli1" />

    <TextView
        android:id="@+id/notelp3text"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:text="No Telp"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alamat3text" />

    <TextView
        android:id="@+id/notelp3texttitik"
        android:layout_width="5dp"
        android:layout_height="wrap_content"
        android:text=":"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/notelp3"
        app:layout_constraintTop_toBottomOf="@+id/alamat3texttitik" />

    <TextView
        android:id="@+id/notelp3"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/notelp1"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alamat3" />

