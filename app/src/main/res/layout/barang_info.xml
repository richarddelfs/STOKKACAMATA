<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="514dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/profilebarang1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TextNamabarang"
        android:layout_width="70dp"
        android:layout_height="22dp"
        android:text="Nama"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilebarang1" />

    <TextView
        android:id="@+id/TextNamabarangtitik"
        android:layout_width="5dp"
        android:layout_height="22dp"
        android:text=":"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/tv_product_name"
        app:layout_constraintStart_toEndOf="@+id/TextNamabarang"
        app:layout_constraintTop_toBottomOf="@+id/profilebarang1" />

    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="300dp"
        android:layout_height="22dp"
        android:text="@string/nama1"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/TextNamabarang"
        app:layout_constraintTop_toBottomOf="@+id/profilebarang1" />

    <TextView
        android:id="@+id/TextMerkbarang"
        android:layout_width="70dp"
        android:layout_height="22dp"
        android:layout_marginTop="22dp"
        android:text="Merk"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/TextNamabarang" />

    <TextView
        android:id="@+id/TextMerkbarangtitik"
        android:layout_width="5dp"
        android:layout_height="22dp"
        android:text=":"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/tv_product_brand"
        app:layout_constraintStart_toEndOf="@+id/TextMerkbarang"
        app:layout_constraintTop_toBottomOf="@+id/TextNamabarangtitik" />

    <TextView
        android:id="@+id/tv_product_brand"
        android:layout_width="300dp"
        android:layout_height="22dp"
        android:text="@string/merk"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/TextMerkbarang"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_name" />

    <TextView
        android:id="@+id/TextTipebarang"
        android:layout_width="70dp"
        android:layout_height="22dp"
        android:text="Tipe"
        android:textStyle="bold"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextMerkbarang" />

    <TextView
        android:id="@+id/TextTipebarangtitik"
        android:layout_width="5dp"
        android:layout_height="22dp"
        android:text=":"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/tv_product_type"
        app:layout_constraintStart_toEndOf="@+id/TextTipebarang"
        app:layout_constraintTop_toBottomOf="@+id/TextMerkbarangtitik" />

    <TextView
        android:id="@+id/tv_product_type"
        android:layout_width="300dp"
        android:layout_height="22dp"
        android:text="@string/tipe"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/TextTipebarang"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_brand" />

    <TextView
        android:id="@+id/TextWarnabarang"
        android:layout_width="70dp"
        android:layout_height="22dp"
        android:text="Warna"
        android:textStyle="bold"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextTipebarang" />

    <TextView
        android:id="@+id/TextWarnabarangtitik"
        android:layout_width="5dp"
        android:layout_height="22dp"
        android:text=":"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/tv_product_color"
        app:layout_constraintStart_toEndOf="@+id/TextWarnabarang"
        app:layout_constraintTop_toBottomOf="@+id/TextTipebarangtitik" />

    <TextView
        android:id="@+id/tv_product_color"
        android:layout_width="300dp"
        android:layout_height="22dp"
        android:text="@string/warna"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/TextWarnabarang"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_type" />

    <TextView
        android:id="@+id/textJumlahbarang"
        android:layout_width="70dp"
        android:layout_height="22dp"
        android:text="Jumlah"
        android:textStyle="bold"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextWarnabarang" />

    <TextView
        android:id="@+id/textJumlahbarangtitik"
        android:layout_width="5dp"
        android:layout_height="22dp"
        android:text=":"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/tv_product_quantity"
        app:layout_constraintStart_toEndOf="@+id/textJumlahbarang"
        app:layout_constraintTop_toBottomOf="@+id/TextWarnabarangtitik" />

    <TextView
        android:id="@+id/tv_product_quantity"
        android:layout_width="300dp"
        android:layout_height="22dp"
        android:text="@string/jumlah"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textJumlahbarang"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_color" />

    <ImageView
        android:id="@+id/qrcode"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_quantity" />

    <ImageView
        android:id="@+id/imagegaris"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        app:layout_constraintTop_toBottomOf="@+id/qrcode"
        app:srcCompat="@drawable/blackline"/>

</androidx.constraintlayout.widget.ConstraintLayout>